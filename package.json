{
  "name": "jsonresume-theme-pillar",
  "version": "0.0.1",
  "description": "Pillar theme for JSON Resume standard",
  "main": "index.js",
  "files": [
    "index.js",
    "src/**/*",
    "public/assets/**/*"
  ],
  "scripts": {
    "build": "npm-run-all scss copy export",
    "scss": "sass --no-source-map src/assets/scss:public/assets/css",
    "copy": "npm-run-all copy:*",
    "copy:css": "copyfiles -u 1 'src/assets/css/**/*' public/",
    "export": "npm-run-all export:*",
    "export:html": "resume export -r resume.yaml -f html -t . public/index.html",
    "export:pdf": "node src/js/html2pdf.js",
    "sync": "browser-sync start --server public --files 'public/**/*'",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "onchange 'src/assets/css/**/*' -- npm run copy:css",
    "watch:scss": "sass --no-source-map --watch src/assets/scss:public/assets/css",
    "watch:templates": "onchange 'resume.yaml' 'src/**/*.hbs' -- npm run export:html",
    "dev": "npm run build && npm-run-all --parallel watch sync"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enawder/jsonresume-theme-pillar.git"
  },
  "keywords": [
    "json",
    "resume",
    "json-resume",
    "theme",
    "cv",
    "curriculum-vitae"
  ],
  "author": "enawder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/enawder/jsonresume-theme-pillar/issues"
  },
  "homepage": "https://github.com/enawder/jsonresume-theme-pillar#readme",
  "dependencies": {
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0"
  },
  "devDependencies": {
    "browser-sync": "^2.28.1",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "puppeteer": "^19.7.2",
    "resume-cli": "^3.0.8",
    "sass": "^1.58.3"
  }
}
