<header class="resume-header pt-4 pt-md-0">
  <div class="row">
    {{#if resume.basics.image}}
    <div class="col-block col-md-auto resume-picture-holder text-center text-md-start">
      <img class="picture" src="assets/images/{{resume.basics.image}}" alt="">
    </div>
    {{/if}}
    <div class="col">
      <div class="row p-4 justify-content-center justify-content-md-between">
        <div class="primary-info col-auto">
          <h1 class="name mt-0 mb-1 text-white text-uppercase text-uppercase">
            {{resume.basics.name}}
          </h1>
          <div class="title mb-3">{{resume.basics.label}}</div>
          <ul class="list-unstyled">
            {{#if resume.basics.email}}
            <li class="mb-2">
              <a class="text-link" href="mailto:{{resume.basics.email}}">
                <i class="far fa-envelope fa-fw me-2" data-fa-transform="grow-3"></i>
                {{~resume.basics.email}}
              </a>
            </li>
            {{/if}}
            {{#if resume.basics.phone}}
            <li class="mb-2">
              <a class="text-link" href="tel:{{resume.basics.phone}}">
                <i class="fas fa-mobile-alt fa-fw me-2" data-fa-transform="grow-6"></i>
                {{~resume.basics.phone}}
              </a>
            </li>
            {{/if}}
            {{#with resume.basics.location}}
            {{#or this.address this.postalCode this.city this.region this.countryCode}}
            <li class="mb-2">
              <a class="text-link" href="https://maps.google.com/?q={{escape (locationToString this)}}">
                <i class="fas fa-location-dot fa-fw me-2" data-fa-transform="grow-3"></i>
                {{~locationToString this}}
              </a>
            </li>
            {{/or}}
            {{/with}}
          </ul>
        </div>
        {{#or resume.basics.profiles resume.meta.download.pdf resume.basics.url}}
        <div class="secondary-info col-auto mt-2">
          <div class="row g-3 mb-3">
            {{#if resume.meta.download.pdf}}
            <div class="col-auto download-wrapper">
              {{> download}}
            </div>
            {{/if}}
            {{#if resume.meta.languages}}
            <div class="col-auto">
              {{> language-selector}}
            </div>
            {{/if}}
          </div>
          <ul class="resume-social list-unstyled">
            {{#each resume.basics.profiles}}
            <li class="mb-3">
              <a class="text-link" href="{{this.url}}">
                <span class="fa-container text-center me-2">
                  <i class="fab fa-{{lowercase this.network}} fa-fw"></i>
                </span>
                {{~#with (urlParse this.url)}}
                  {{~this.hostname}}
                  {{~#unlessEq this.pathname "/"}}
                    {{~this.pathname}}
                  {{/unlessEq}}
                {{/with}}
              </a>
            </li>
            {{/each}}
            {{#if resume.basics.url}}
            <li>
              <a class="text-link" href="{{resume.basics.url}}">
                <span class="fa-container text-center me-2">
                  <i class="fas fa-globe"></i>
                </span>
                {{~#with (urlParse resume.basics.url)}}
                  {{~this.hostname}}
                  {{~#unlessEq this.pathname "/"}}
                    {{~this.pathname}}
                  {{/unlessEq}}
                {{/with}}
              </a>
            </li>
            {{/if}}
          </ul>
        </div>
        {{/or}}
      </div>
    </div>
  </div>
</header>
