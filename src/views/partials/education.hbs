{{#if resume.education}}
{{#if anyItemBelow}}
<section class="resume-section education-section mb-5">
{{else}}
<section class="resume-section education-section">
{{/if}}
  <h2 class="resume-section-title text-uppercase fw-bold pb-3 mb-3">{{i18n "education"}}</h2>
  <div class="resume-section-content">
    <ul class="list-unstyled">
      {{#each resume.education}}
      <li class="mb-2">
        <div class="resume-degree fw-bold">{{this.studyType}} {{this.area}}</div>
        <div class="resume-degree-org">
          <a class="text-link no-text-decoration" href="{{this.url}}">{{this.institution}}</a>
        </div>
        <div class="resume-degree-time">
          {{this.startDate}} &#8211 {{#with ..}}{{default ../this.endDate (i18n "present")}}{{/with}}
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</section>
{{/if}}
