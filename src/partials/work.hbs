{{#if resume.work}}
<section class="resume-section experience-section mb-5">
  <h2 class="resume-section-title text-uppercase fw-bold pb-3 mb-3">{{i18n "workExperience"}}</h2>
  <div class="resume-section-content">
    <div class="resume-timeline position-relative">
      {{#each resume.work}}
      <article class="resume-timeline-item position-relative pb-5">
        <div class="resume-timeline-item-header mb-2">
          <div class="d-flex flex-column flex-md-row">
            <h3 class="resume-position-title fw-bold mb-1">{{this.position}}</h3>
            <div class="resume-company-name ms-auto">{{this.name}}</div>
          </div>
          <div class="resume-position-time">
            {{this.startDate}} &#8211 {{#with ..}}{{default ../this.endDate (i18n "present")}}{{/with}}
          </div>
        </div>
        <div class="resume-timeline-item-desc">
          {{#if this.summary}}
          <p>{{this.summary}}</p>
          {{/if}}

          {{#if this.highlights}}
          <h4 class="resume-timeline-item-desc-heading fw-bold">{{#with ..}}{{i18n "achievements"}}{{/with}}</h4>
          <ul>
            {{#each this.highlights}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          {{/if}}

          {{#if this.keywords}}
          <h4 class="resume-timeline-item-desc-heading fw-bold">{{#with ..}}{{i18n "technologiesUsed"}}{{/with}}</h4>
          <ul class="list-inline">
            {{#each this.keywords}}
            <li class="list-inline-item">
              <span class="badge bg-secondary badge-pill">{{this}}</span>
            </li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </article>
      {{/each}}
    </div>
  </div>
</section>
{{/if}}
